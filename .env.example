# Server
NODE_ENV=production
HOST=0.0.0.0
PORT=3536

# Security
API_TOKEN=replace-with-strong-random-token
REQUIRE_API_TOKEN=true
AUTH_TICKET_TTL_MS=120000
DNS_CACHE_TTL_MS=300000

# CORS (comma separated origins)
# CORS_ORIGINS=https://your-domain.example

# Paths
DOWNLOAD_PATH=./downloads
CONFIG_PATH=./config
COOKIE_PATH=./config/cookies.txt
DATABASE_PATH=./config/history.json

# Queue and resource controls
MAX_CONCURRENT_DOWNLOADS=3
CPU_UTILIZATION_TARGET=0.75
MAX_RESOURCE_UNITS=4
MIN_FREE_MEM_MB=384
MEM_PER_RESOURCE_UNIT_MB=320
MAX_FFMPEG_THREADS=2
QUEUE_RETRY_MS=2500
ANALYZE_TIMEOUT_MS=30000
ANALYZE_CONCURRENCY=4
SILENT_MODE=true
JOB_RETENTION_MS=21600000

# Download defaults
DEFAULT_FORMAT=bestvideo*+bestaudio/best
OUTPUT_TEMPLATE=%(title)s.%(ext)s
CHAPTER_TEMPLATE=%(title)s - %(section_number)02d - %(section_title)s.%(ext)s
